generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PokemonType {
  Normal
  Fire
  Water
  Electric
  Grass
  Ice
  Fighting
  Poison
  Ground
  Flying
  Psychic
  Bug
  Rock
  Ghost
  Dragon
  Dark
  Steel
  Fairy
}

model Card {
  id            Int         @id @default(autoincrement())
  name          String
  hp            Int
  attack        Int
  type          PokemonType
  pokedexNumber Int
  imgUrl        String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  deckcard      DeckCard[]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deck      Deck[]
}

model Deck {
  id        Int     @id @default(autoincrement())
  name      String
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  createdAt DateTime
  updatedAt DateTime
  deckcard DeckCard[]
}

model DeckCard {
  id       Int    @id @default(autoincrement())
  deck     Deck    @relation(fields: [deckId], references: [id])
  deckId   Int
  card     Card    @relation(fields: [cardId], references: [id])
  cardId   Int
}